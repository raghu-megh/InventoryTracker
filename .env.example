# MyRestaurantInventory Environment Variables Example
# Copy this file to .env and fill in your actual values
# Note: In Replit, use the Secrets tab instead of .env files

# Development Environment
NODE_ENV=development

# Database Configuration (provided by Replit)
DATABASE_URL=postgresql://user:password@localhost:5432/myrestaurant_inventory
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=myrestaurant_inventory

# Replit Authentication (provided by Replit)
SESSION_SECRET=your-session-secret-here
REPL_ID=your-repl-id
REPLIT_DOMAINS=your-domain.replit.dev
ISSUER_URL=https://replit.com/oidc

# Clover POS Integration
CLOVER_APP_ID=your-clover-app-id
CLOVER_APP_SECRET=your-clover-app-secret
CLOVER_API_BASE=https://apisandbox.dev.clover.com
CLOVER_API_KEY=your-clover-api-key-here

# Azure Document Intelligence (for receipt processing)
AZURE_DOCUMENT_AI_KEY=your-azure-document-ai-key-here
AZURE_DOCUMENT_AI_ENDPOINT=your-azure-endpoint-here

# Email Notifications (Mailchimp)
MAILCHIMP_API_KEY=your-mailchimp-api-key-here

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=your-twilio-phone-number-here

# Firebase (removed - now using Replit Auth)
# VITE_FIREBASE_API_KEY=removed
# VITE_FIREBASE_PROJECT_ID=removed
# VITE_FIREBASE_APP_ID=removed